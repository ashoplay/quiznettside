<%- include('./partials/header') %>
<%- include('./partials/navbar') %>

<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">Registrer deg</h1>
            <%- include('./partials/messages') %>
            <form action="/register" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group">
                    <label for="brukernavn">Brukernavn</label>
                    <input type="text" id="brukernavn" name="brukernavn" class="form-control" placeholder="Skriv inn brukernavn" value="<%= typeof brukernavn != 'undefined' ? brukernavn : '' %>">
                </div>
                <div class="form-group">
                    <label for="epost">E-post</label>
                    <input type="email" id="epost" name="epost" class="form-control" placeholder="Skriv inn e-post" value="<%= typeof epost != 'undefined' ? epost : '' %>">
                </div>
                <div class="form-group">
                    <label for="passord">Passord</label>
                    <input type="password" id="passord" name="passord" class="form-control" placeholder="Skriv inn passord">
                </div>
                <div class="form-group">
                    <label for="passord2">Bekreft passord</label>
                    <input type="password" id="passord2" name="passord2" class="form-control" placeholder="Bekreft passord">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Registrer</button>
            </form>
            <p class="lead mt-4">
                Har du allerede en konto? <a href="/login">Logg inn</a>
            </p>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
